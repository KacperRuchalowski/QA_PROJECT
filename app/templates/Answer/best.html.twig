{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_answer_edit'|trans({'%id%': answer.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1 class="display-4 d-flex justify-content-center">{{ 'title_answer_edit'|trans({'%id%': category.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('answer_best', {id: answer.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('question_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}