{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Question List'|trans }}
{% endblock %}


{% block body %}



    <h1>{{ 'Question List'|trans }}</h1>

    {% if is_granted ('ROLE_ADMIN') %}
        <a href="{{ url('question_create') }}" title="{{ 'Create '|trans }}">
            {{ 'Create '|trans }}
        </a>
    {% endif %}



    {% if pagination is defined and pagination.items|length %}


        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Created:'|trans, 'question.createdAt') }}</th>
                <th>{{ 'Title'|trans }}</th>
                <th>{{ 'Content'|trans }}</th>
                <th>{{ 'Category'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for question in pagination.items %}
                <tr>
                    <td>{{ question.createdAt|date('Y/m/d') }}</td>
                    <td>{{ question.TitleQuestion }}</td>
                    <td>{{ question.Content }}</td>
                    <td>{{ question.category.name }}</td>

                    <td>
                        <a href="{{ url('question_show', {id: question.id}) }}" title="{{ 'Show '|trans }}">
                            {{ 'Show '|trans }}
                        </a>
                        {% if is_granted ('ROLE_ADMIN') %}
                        <a href="{{ url('question_edit', {id: question.id}) }}" title="{{ 'Edit '|trans }}">
                            {{ 'Edit '|trans }}
                        </a>

                        {% if not question.answers|length %}
                        <a href="{{ url('question_delete', {id: question.id}) }}" title="{{ 'Delete '|trans }}">
                            {{ 'Delete '|trans }}
                        </a>

                        {% endif %}

                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}