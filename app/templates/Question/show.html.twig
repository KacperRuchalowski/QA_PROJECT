{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Question Details'|trans({'%id%': question.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Question Details'|trans({'%id%': question.id|default('')}) }}</h1>
    {% if question is defined and question|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'ID'|trans }}</dt>
            <dd>{{ question.id }}</dd>
            <dt>{{ 'Title'|trans }}</dt>
            <dd>{{ question.TitleQuestion|trans }}</dd>
            <dt>{{ 'Content'|trans }}</dt>
            <dd>{{ question.Content }}</dd>
            <dt>{{ 'Category'|trans }}</dt>
            <dd>{{  question.category.name }}</dd>
        </dl>
        <p>
            <a href="{{ url('question_index') }}" title="{{ 'Back'|trans }}">
                {{ 'Back'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}