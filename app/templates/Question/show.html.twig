{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Question'|trans({'%id%': question.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Question'|trans({'%id%': question.id|default('')}) }}</h1>
    {% if question is defined and question|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'Question ID'|trans }}</dt>
            <dd>{{ question.id }}</dd>
            <dt>{{ 'Title'|trans }}</dt>
            <dd>{{ question.titleQuestion}}</dd>
            <dt>{{ 'Content:'|trans }}</dt>
            <dd>{{ question.content }}</dd>
        </dl>
        <p>
            <a href="{{ url('question_index') }}" title="{{ 'action_back_to_list'|trans }}">
                {{ 'Back'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}