{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Category List'|trans }}
{% endblock %}


{% block body %}


    <h1>{{ 'Category List'|trans }}</h1>

    {% if pagination is defined and pagination.items|length %}


        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Title'|trans, 'category.name') }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for category in pagination.items %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ url('category_show', {id: category.id}) }}" title="{{ 'Show '|trans }}">
                            {{ 'Show '|trans }}
                        </a>
                        {% if is_granted ('ROLE_ADMIN') %}
                        <a href="{{ url('category_edit', {id: category.id}) }}" title="{{ 'Edit '|trans }}">
                            {{ 'Edit '|trans }}
                        </a>

                        <a href="{{ url('category_delete', {id: category.id}) }}" title="{{ 'Delete '|trans }}">
                            {{ 'Delete '|trans }}
                        </a>
                        {% endif %}
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}



{% endblock %}