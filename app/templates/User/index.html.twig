{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_user_list'|trans }}
{% endblock %}


{% block body %}



    <h1 class="display-4 d-flex justify-content-center">{{ 'title_user_list'|trans }}</h1>


    {% if pagination is defined and pagination.items|length %}


        <table class="table table-striped">
            <thead class="thead-dark">
            <tr>
                <th>{{ 'label_user_email'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in pagination.items %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>
                            <a class="btn btn-warning" href="{{ url('user_edit', {id: user.id}) }}" title="{{ 'label_user_edit'|trans }}">
                                {{ 'label_user_edit'|trans }}
                            </a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}