{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_user_edit'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1 class="display-4 d-flex justify-content-center">{{ 'title_user_edit'|trans({'%id%': category.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('user_edit', {id: user.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('user_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}